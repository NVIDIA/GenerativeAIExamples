{
    "compilerOptions": {
      "outDir": "./.next/",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "preserve",
      "allowJs": true, // This allows JavaScript files to be compiled.
      "strict": true // Enable all strict type-checking options.
      ,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "skipLibCheck": true,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": [
      "./src/components/chatbox",
      "./src/components",
      "./src"
    ],
    "exclude": [
      "node_modules"
    ]
  }