FROM ubuntu:22.04

WORKDIR /workspace/src

ADD experimental/streaming_ingest_rag/producer/src .
ADD notebooks/dataset.zip data

SHELL ["/bin/bash", "-c"]

RUN apt-get update \
    && apt-get install -y python3-pip vim \
    && pip3 install \
      confluent-kafka==1.9.2 \
      jsonlines==4.0.0 \
      pymupdf==1.23.25 \
    && rm -rf /var/lib/apt/lists/*

RUN python3 generate_dataset.py
